exec --no-startup-id polybar example

for_window [class=".*"] border pixel 0
gaps inner 5
gaps outer 0
gaps top   16
gaps bottom 16
gaps left  135
gaps right 135

floating_modifier Mod1
bindsym Mod1+q kill
bindsym Mod1+f fullscreen toggle
bindsym Mod1+s floating toggle
bindsym Mod1+Shift+r restart
bindsym Mod1+Shift+e "i3-msg exit"

bindsym Mod1+Return exec alacritty
bindsym Mod1+d exec ""
bindsym Mod4+l exec ""

set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6: "

for_window [class="Google-chrome"] move to workspace $ws1; workspace $ws1
for_window [class="Alacritty"] move to workspace $ws2; workspace $ws2
for_window [class="Spotify"] move to workspace $ws3; workspace $ws3
for_window [class="TelegramDesktop"] move to workspace $ws4; workspace $ws4

bindsym Mod1+1 workspace $ws1
bindsym Mod1+2 workspace $ws2
bindsym Mod1+3 workspace $ws3
bindsym Mod1+4 workspace $ws4